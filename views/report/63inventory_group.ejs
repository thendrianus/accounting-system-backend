<html>

<head>
    <title>Data Inventory Group</title>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet">

</head>

<body>
    <h1>Data Inventory Group</h1>
    <br>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Label</th>
                <th scope="col">Value</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>1</td>
                <td>Code</td>
                <td><%= posts.inventory_group.inventory_group_code %></td>
            </tr>
            <tr>
                <td>1</td>
                <td>Name</td>
                <td><%= posts.inventory_group.inventory_group %></td>
            </tr>
            <tr>
                <td>1</td>
                <td>Sale</td>
                <td><%= posts.inventory_group.issale == 1? 'Yes': 'No' %></td>
            </tr>
            <tr>
                <td>1</td>
                <td>Purchase</td>
                <td><%= posts.inventory_group.ispurchase == 1? 'Yes': 'No' %></td>
            </tr>
            <tr>
                <td>1</td>
                <td>Fix Asset</td>
                <td><%= posts.inventory_group.isfix_asset == 1? 'Yes': 'No' %></td>
            </tr>
            <tr>
                <td>5</td>
                <td>Description</td>
                <td><%= posts.inventory_group.description %></td>
            </tr>
        </tbody>
    </table>
    <br>
    <div class="row">
        <div class="col-sm">
            Print On <%= posts.currentDate %>
        </div>
    </div>
</body>

</html>