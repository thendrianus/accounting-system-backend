<html>

    <head>
        <title>Data Semua Employee Account</title>

        <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet">

    </head>

    <body>
        <h1>Data Semua Employee Account</h1>
        <br>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Code</th>
                    <th scope="col">Username</th>
                    <th scope="col">Employee</th>
                    <th scope="col">Permission</th>
                    <th scope="col">Description</th>
                </tr>
            </thead>
            <tbody>
                <% for(let i = 0; i < posts.detail.length; i++) { %>
                    <tr>
                        <td><%= i + 1 %></td>
                        <td scope="row"><%= posts.detail[i].employee_account_code %></th>
                        <td><%= posts.detail[i].username %></td>
                        <td><%= posts.detail[i].employee %></td>
                        <td><%= posts.detail[i].app_permission_group %></td>
                        <td><%= posts.detail[i].description %></td>
                    </tr>
                <% } %>
            </tbody>
        </table>
        <br>
        <div class="row">
            <div class="col-sm">
                Print On <%= posts.currentDate %>
            </div>
        </div>
    </body>

</html>