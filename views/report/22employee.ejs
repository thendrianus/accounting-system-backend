<html>

<head>
    <title>Data Employee</title>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet">

</head>

<body>
    <h1>Data Employee</h1>
    <br>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Label</th>
                <th scope="col">Value</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>1</td>
                <td>Employee Code</td>
                <td><%= posts.employee.employee_code %></td>
            </tr>
            <tr>
                <td>2</td>
                <td>Category</td>
                <td><%= posts.employee.employee_category %></td>
            </tr>
            <tr>
                <td>3</td>
                <td>Title</td>
                <td><%= posts.employee.title %></td>
            </tr>
            <tr>
                <td>4</td>
                <td>Firstname</td>
                <td><%= posts.employee.firstname %></td>
            </tr>
            <tr>
                <td>5</td>
                <td>Lastname</td>
                <td><%= posts.employee.lastname %></td>
            </tr>
            <tr>
                <td>6</td>
                <td>Address</td>
                <td><%= posts.employee.address %></td>
            </tr>
            <tr>
                <td>7</td>
                <td>Phone Number</td>
                <td><%= posts.employee.phone_number %></td>
            </tr>
            <tr>
                <td>8</td>
                <td>Birth place</td>
                <td><%= posts.employee.birth_place %></td>
            </tr>
            <tr>
                <td>9</td>
                <td>Birt date</td>
                <td><%= posts.employee.birth_date_formated %></td>
            </tr>
            <tr>
                <td>10</td>
                <td>Email</td>
                <td><%= posts.employee.email %></td>
            </tr>
            <tr>
                <td>11</td>
                <td>Job name</td>
                <td><%= posts.employee.employee_job %></td>
            </tr>
            <tr>
                <td>12</td>
                <td>Status</td>
                <td><%= posts.employee.employee_status %></td>
            </tr>
            <tr>
                <td>13</td>
                <td>Salesman</td>
                <td><%= posts.employee.is_sales == 1? "Yes":"No" %></td>
            </tr>
            <tr>
                <td>14</td>
                <td>Purchaseman</td>
                <td><%= posts.employee.is_purchasesman == 1? "Yes":"No" %></td>
            </tr>
            <tr>
                <td>15</td>
                <td>Debt Collector</td>
                <td><%= posts.employee.is_debt_collector == 1? "Yes":"No" %></td>
            </tr>
            <tr>
                <td>16</td>
                <td>Description</td>
                <td><%= posts.employee.description %></td>
            </tr>
        </tbody>
    </table>
    <br>
    <div class="row">
        <div class="col-sm">
            Print On <%= posts.currentDate %>
        </div>
    </div>
</body>

</html>